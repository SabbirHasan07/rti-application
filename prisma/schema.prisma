generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                    String        @id @default(cuid())
  fullName              String
  email                 String?       @unique
  phone                 String        @unique
  password              String
  role                  Role          @default(USER)
  createdAt             DateTime      @default(now())
  applications          Application[]
  feedbacks             Feedback[]
  appeals               Appeal[]
  isPhoneNumberVerified Boolean
  resetCode             String?  
  resetCodeExpiry       DateTime?
}

model Application {
  id          String     @id @default(cuid())
  user        User       @relation(fields: [userId], references: [id])
  userId      String
  data        Json
  feedbacks   Feedback[] // 👈 inverse relation
  isNotified  Boolean
  createdAt   DateTime   @default(now())
  hasGivenFeedback       Boolean     @default(false)
  hasAppealed Boolean    @default(false)
  appeal            Appeal?
}


model Appeal {
  id                       String     @id @default(cuid())
  user                     User       @relation(fields: [userId], references: [id])
  userId                   String
  applicationId            String      @unique
  application              Application @relation(fields: [applicationId], references: [id])
  applicantName            String
  address                  String
  phone                    String
  referenceNo              String
  appealOfficer            String
  responseDate             DateTime?
  subject                  String?
  details                  String?
  reason                   String
  informationGivenOfficer  String?
  feedbacks                Feedback[] // 👈 inverse relation
  createdAt                DateTime   @default(now())
}

model Feedback {
  id             String        @id @default(cuid())
  user           User          @relation(fields: [userId], references: [id])
  userId         String

  application    Application?  @relation(fields: [applicationId], references: [id])
  applicationId  String?       // <-- এটি nullable করতে হবে

  appeal         Appeal?       @relation(fields: [appealId], references: [id])
  appealId       String?       // <-- এটিও nullable করতে হবে

  response       String
  infoType       String?
  isAppeal       Boolean
  createdAt      DateTime      @default(now())
}

model PhoneVerification {
  id          String   @id @default(cuid())
  phone       String   @unique
  code        String
  expiresAt   DateTime
  createdAt   DateTime @default(now())
  isVerified  Boolean
}

model Office {
  id          String   @id @default(cuid())
  name        String
  designation String
  division    String?
  district    String
  officeType  String?
  createdAt   DateTime @default(now())
}

enum Role {
  USER
  ADMIN
}
